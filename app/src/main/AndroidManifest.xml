        <activity
            android:name=".Details"
            android:parentActivityName=".Purchase" />
        <activity
            android:name=".MyAds"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".Sell"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Purchase"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.notes.note"
            android:label="note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.notes.book"
            android:label="note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
